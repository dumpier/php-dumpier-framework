{
    "name": "dumpier/php-presto-framework",
    "description": "The Presto Framework.",
    "keywords": [ "php", "framework", "presto" ],
    "license": "MIT",
    "homepage": "http://presto.dumpier.jpn.org/",

    "authors": [
        {
            "name": "Dumpieer",
            "email": "dumpieer@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2"
    },

    "require-dev": {
        "phpunit/phpunit": "^7.2"
    },

    "extra": {
        "branch-alias": {
            "master": "1"
        }
    },
    
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },

    "autoload":{
        "files": [
            "helpers.php",
            "facade.php"
        ],
        "psr-4": {
            "Presto\\": "src/presto/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },

    "prefer-stable": true
}